<Page x:Class="Элементы_компоновки.View.Pages.EmployeesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Элементы_компоновки.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="665" d:DesignWidth="940"
      Title="Сотрудники">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="20" />
            <RowDefinition Height="60" />
            <RowDefinition Height="20" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="200" />
            </Grid.ColumnDefinitions>

            <Button Name="AddEmployeeBtn" Content="Добавить" Click="AddEmployeeBtn_Click"/>

            <Button Name="EditEmployeeBtn" Grid.Column="2" Content="Редактировать" Click="EditEmployeeBtn_Click"/>

            <Button Name="RemoveEmployeeBtn" Grid.Column="4" Content="Удалить" Click="RemoveEmployeeBtn_Click"/>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="200" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="Поиск по имени:"/>
            <TextBox Name="SearchByNameTb" Grid.Column="2"/>

            <TextBlock Grid.Column="4" Text="Фильтр по должности:"/>
            <ComboBox Name="FilterByPosition" Grid.Column="6"/>
        </Grid>

        <ListView Name="EmployeesLv" Grid.Row="4">
            
        </ListView>
    </Grid>
</Page>
