<Window x:Class="Элементы_компоновки.View.Windows.AddEditEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Элементы_компоновки.View.Windows"
        mc:Ignorable="d"
        Title="Добавление сотрудника" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="20" />
            <RowDefinition Height="50" />
            <RowDefinition Height="20" />
            <RowDefinition Height="50" />
            <RowDefinition Height="20" />
            <RowDefinition Height="50" />
            <RowDefinition Height="20" />
            <RowDefinition Height="50" />
            <RowDefinition Height="20" />
            <RowDefinition Height="50" />
            <RowDefinition Height="20" />
            <RowDefinition Height="50" />
            <RowDefinition Height="20" />
            <RowDefinition Height="50" />
            <RowDefinition Height="20" />
            <RowDefinition Height="50" />
            <RowDefinition Height="20" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>

        <TextBlock Text="Полное имя:"/>
        <TextBox Name="FullnameTb" Grid.Column="2" Text="{Binding Fullname}"/>
        
        <TextBlock Grid.Row="2" Text="Дата рождения:"/>
        <DatePicker Name="DateOfBirthDp" Grid.Row="2" Grid.Column="2" SelectedDate="{Binding DateOfBirth}"/>

        <TextBlock Grid.Row="4" Text="Должность:"/>
        <ComboBox Name="PositionCmb" Grid.Row="4" Grid.Column="2" SelectedValuePath="Id" DisplayMemberPath="Name"/>

        <TextBlock Grid.Row="6" Text="Номер телефона:"/>
        <TextBox Name="PhoneTb" Grid.Row="6" Grid.Column="2" Text="{Binding Phone}"/>

        <TextBlock Grid.Row="8" Text="Почта:"/>
        <TextBox Name="EmailTb" Grid.Row="8" Grid.Column="2" Text="{Binding Email}"/>

        <TextBlock Grid.Row="10" Text="Отдел:"/>
        <ComboBox Name="DepartmentCmb" Grid.Row="10" Grid.Column="2" SelectedValuePath="Id" DisplayMemberPath="Name"/>

        <TextBlock Grid.Row="12" Text="Дата трудоустройства:"/>
        <DatePicker Name="DateOfEmploymentDp" Grid.Row="12" Grid.Column="2" SelectedDate="{Binding DateOfEmployment}"/>

        <CheckBox Name="IsVacationCb" Grid.Row="14" Grid.Column="2" Content="В отпуске" IsChecked="{Binding IsVacation}"/>

        <TextBlock Grid.Row="16" Text="Пол:"/>
        <ComboBox Name="GenderCmb" Grid.Row="16" Grid.Column="2" DisplayMemberPath="Name" SelectedValuePath="Id">
        </ComboBox>

        <Button Name="AddEmployeeBtn" Grid.Row="18" Grid.Column="2" Content="Добавить" Click="AddEmployeeBtn_Click"/>

        <Button Name="EditEmployeeBtn" Grid.Row="18" Grid.Column="2" Content="Редактировать" Click="EditEmployeeBtn_Click"/>
    </Grid>
</Window>
